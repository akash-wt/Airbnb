<% layout('/layouts/boilerplate.ejs') -%>


<div class="signup-form-container">
  <h4>Sign up to Airbnb</h4>
  <form action="/signup" method="post" novalidate class="needs-validation">
    <div class="form-group">
      <label for="username">Username</label>
      <input id="username" type="text" name="username" class="form-control" placeholder="Username" required />
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input id="email" type="email" name="email" class="form-control" placeholder="Email" required />
    </div>
    <div class="form-group">
      <label for="Password">Password</label>
      <input id="Password" type="password" name="password" class="form-control" placeholder="Password" required />
    </div>
    <input type="submit" class="btn-submit" value="Sign Up" />
  </form>
  <a href="/login" class="login-link">Login?</a>
</div>
